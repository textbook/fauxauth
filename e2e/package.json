{
  "name": "fauxauth-e2e",
  "version": "1.0.0",
  "scripts": {
    "predocker": "docker-compose build",
    "docker": "docker-compose run e2e test || (npm run postdocker && exit 1)",
    "postdocker": "docker-compose down",
    "e2e": "concurrently -k -s first -n \"app,e2e,srv,sln\" \"npm start\" \"npm test\" \"npm run serve\" \"npm run selenium\"",
    "e2e:dev": "concurrently -k -s first -n \"app,e2e,srv,sln\" \"npm --prefix=.. start\" \"npm test\" \"npm run serve\" \"npm run selenium\"",
    "preselenium": "webdriver-manager update --gecko=false --versions.chrome=${CHROME_VERSION:-latest}",
    "selenium": "webdriver-manager start",
    "serve": "serve",
    "start": "fauxauth",
    "pretest": "wait-on -l tcp:4444",
    "test": "jest --reporters=\"default\" --reporters=\"jest-junit\""
  },
  "dependencies": {
    "axios": "^0.21.0",
    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "serve": "^11.3.2",
    "wait-on": "^5.2.0",
    "webdriver-manager": "^12.1.7",
    "webdriverio": "^6.10.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.e2e.js"
    ]
  }
}
