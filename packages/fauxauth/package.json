{
  "name": "fauxauth",
  "version": "7.0.0",
  "description": "Helper application for testing OAuth clients",
  "bin": {
    "fauxauth": "./lib/server.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "/lib",
    "/views"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prebuild": "rimraf lib/*",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "chmod u+x ./lib/server.js && cpy ../../README.md packages/fauxauth/",
    "start": "node $npm_package_bin_fauxauth",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cover": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/fauxauth.git"
  },
  "keywords": [
    "express",
    "mock",
    "oauth",
    "stub",
    "test",
    "testing"
  ],
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/fauxauth/issues"
  },
  "homepage": "https://github.com/textbook/fauxauth#readme",
  "funding": "https://ko-fi.com/textbook",
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "jiff": "^0.7.3",
    "lodash.clonedeep": "^4.5.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "xml2js": "^0.4.23",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.12",
    "@types/xml2js": "^0.4.11",
    "@types/yargs": "^17.0.13",
    "cpy-cli": "^4.2.0",
    "jest": "^29.2.2",
    "jest-junit": "^14.0.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
