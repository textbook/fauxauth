{
  "name": "fauxauth",
  "version": "9.0.5",
  "description": "Helper application for testing OAuth clients",
  "bin": {
    "fauxauth": "./lib/server.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "/lib",
    "/views"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "rimraf lib/*",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "chmod u+x ./lib/server.js && cpy ../../LICENSE ../../README.md packages/fauxauth/",
    "start": "node $npm_package_bin_fauxauth",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cover": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/fauxauth.git"
  },
  "keywords": [
    "express",
    "mock",
    "oauth",
    "stub",
    "test",
    "testing"
  ],
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/fauxauth/issues"
  },
  "homepage": "https://github.com/textbook/fauxauth#readme",
  "funding": "https://ko-fi.com/textbook",
  "dependencies": {
    "@tsconfig/node18": "^18.2.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "express": "^4.19.2",
    "jiff": "^0.7.3",
    "lodash.clonedeep": "^4.5.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "xml2js": "^0.6.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "@types/xml2js": "^0.4.14",
    "@types/yargs": "^17.0.32",
    "cpy-cli": "^5.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
