{
  "name": "fauxauth",
  "version": "6.0.3",
  "keywords": [
    "express",
    "mock",
    "oauth",
    "stub",
    "test",
    "testing"
  ],
  "bin": {
    "fauxauth": "./lib/server.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "/packages/fauxauth/views"
  ],
  "description": "Helper application for testing OAuth clients",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "npm --workspace packages/fauxauth run build",
    "e2e": "npm --workspace packages/e2e run e2e",
    "postinstall": "npm --workspace packages/e2e run chromedriver",
    "lint": "eslint --ext=js,ts .",
    "ship": "npm run lint && npm run test && npm run build && npm run e2e",
    "test": "npm --workspace packages/fauxauth test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/fauxauth.git"
  },
  "author": "Jonathan Sharpe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/fauxauth/issues"
  },
  "homepage": "https://github.com/textbook/fauxauth#readme",
  "funding": "https://ko-fi.com/textbook",
  "devDependencies": {
    "@codeyourfuture/eslint-config-standard": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-jest": "^26.5.3"
  },
  "workspaces": [
    "packages/e2e",
    "packages/fauxauth"
  ]
}
