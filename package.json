{
  "name": "fauxauth",
  "version": "8.1.1",
  "private": true,
  "description": "Helper application for testing OAuth clients",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "npm --workspace packages/fauxauth --workspace packages/gitstub run build",
    "build:docker": "docker build . --build-arg ALPINE_RELEASE=3.17 --build-arg NODE_RELEASE=$(cat .nvmrc) --tag textbook/fauxauth",
    "e2e": "npm --workspace packages/e2e run e2e",
    "e2e:custom": "npm --workspace packages/e2e run custom-e2e",
    "pree2e:docker": "npm run build:docker",
    "e2e:docker": "cross-env NODE_RELEASE=$(cat .nvmrc) TAG=latest npm --workspace packages/e2e run docker",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint --ext=js,ts .",
    "ship": "npm run lint && npm run test && npm run build && npm run e2e && npm run e2e:custom",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cover": "npm run test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/fauxauth.git"
  },
  "author": "Jonathan Sharpe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/fauxauth/issues"
  },
  "homepage": "https://github.com/textbook/fauxauth#readme",
  "funding": "https://ko-fi.com/textbook",
  "devDependencies": {
    "@codeyourfuture/eslint-config-standard": "^3.0.3",
    "@types/jest": "^29.2.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.0",
    "jest-junit": "^15.0.0",
    "rimraf": "^4.1.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "workspaces": [
    "packages/e2e",
    "packages/fauxauth",
    "packages/gitstub"
  ]
}
